{
  // "next.config.js", "postcss.config.js", "tailwind.config.js"
  "ignorePatterns": ["next-env.d.ts", "next.config.js", "postcss.config.js", "jest.config.js"],
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",

  "rules": {
    // Best Practices
    // "eqeqeq": "error",
    // "no-invalid-this": "error",
    // "no-return-assign": "error",
    // "no-unused-expressions": ["error", { "allowTernary": true }],
    // 'no-useless-concat': 'error',
    // 'no-useless-return': 'error',
    "react-hooks/exhaustive-deps": "warn", // Chck when missing dependency in an effect hook

    // Stylistic Issues
    // "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    // "quote-props": ["error", "purse"],
    // "react/jsx-uses-react": "error",
    // "react/jsx-uses-vars": "error",
    // "no-use-before-define": "off",
    // "react/jsx-filename-extension": ["warn", { "extensions": [".tsx"] }],
    // "@typescript-eslint/quotes": ["error", "double", {"allowTemplateLiterals": true}],
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/ban-ts-ignore": "off",
    // "@typescript-eslint/explicit-module-boundary-types": "off",
    // "array-bracket-newline": ["error", { "multiline": true, "minItems": null }],
    "array-bracket-spacing": "error",
    // "block-spacing": "error",
    // 'comma-dangle': 'error',
    // 'comma-spacing': 'error',
    // 'comma-style': 'error',

    // ES6
    "arrow-spacing": "error",
    "no-confusing-arrow": "error",
    "no-duplicate-imports": "error",
    "no-var": "error",
    "prefer-const": "error"
  }
}
